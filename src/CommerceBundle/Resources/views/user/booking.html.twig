{% extends '@Core/layout.html.twig' %}

{% block body %}
	<div id="booking">
		<div class="parallax-container">
			<div class="parallax"><img src="{{ asset('bundles/core/img/background/pic1.jpg') }}"></div>
			<div class="section header">
				<h3 class="header center title">Vente du {{ evenement.date|date("d/m/Y") }}</h3>
			</div>
		</div>
		<div class="container">
			<div class="row">
				{{ form_start(formUser) }}
				
				<div class="info_content">
					<h4 class="text_perso center-align place">{{ evenement.lieu.nom }}</h4><br>
					<span class="p_center">{{ evenement.lieu.adresse }}</span><br>
					<span class="p_center">{{ evenement.lieu.indication }}</span>
				</div>
				<table class="striped col m10 offset-m1">
					<thead>
					<tr>
						<th class="col m6">
							Produits
						</th>
						<th class="col m2">
							Prix/Grammes
						</th>
						<th class="col m2">
							Quantit√©
						</th>
						<th class="col m2">

						</th>
					</tr>
					</thead>
					<tbody>
					{% for key, marchandise in evenement.marchandises %}
						<tr>
							<td class="col m6">{{ marchandise.product.name }}</td>
							<td class="col m2">{{ marchandise.prix }}</td>
							<td class="col m2">{{ marchandise.quantite }}</td>
							<td class="col m2">
								{{ form_widget(formUser.selectProduits[key].quantiteCommande) }}
							</td>
						</tr>

					{% endfor %}
					</tbody>
				</table>
				
				<div class="row">
					<div class="col m6">
						{{ form_row(formUser.nom) }}
					</div>
					<div class="col m6">
						{{ form_row(formUser.prenom) }}
					</div>
					<div>
						<span class="center-align">{{ form_row(formUser.submit) }}</span>
					</div>
				</div>
				{{ form_end(formUser) }}
			</div>
		</div>
		<div class="parallax-container parallax_booking">
			<div class="parallax">
				<img src="{{ asset('bundles/core/img/background/pic2.jpg') }}" alt="Unsplashed background img 2">
			</div>
		</div>
        {% include '@Core/pages/footer.html.twig' %}
	</div>

{% endblock %}