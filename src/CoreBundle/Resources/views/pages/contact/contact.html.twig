{% extends '@Core/layout.html.twig'%}

{% block title %}Page_Contact!{% endblock %}

{% block body %}
<div id="contact">
	<div class="parallax-container">
		<div class="parallax">
			<img src="{{ asset('bundles/core/img/background/paralaxcontact.jpg') }}" style="min-width: 100vh;min-height: 100%;max-width: 100%;">
		</div>
	</div>
	
	<div class="section contact container">
		<div class="row form">
			<div class="col m10 offset-m1 s12">
				<h3 class="title form center-align contact">Prendre Contact avec Nous</h3>
                {{ form_start(form) }}
				<div class="input-field">
                    {{ form_row(form.nom) }}
				</div>
				<div class="input-field">
                    {{ form_row(form.prenom) }}
				</div>
				<div id="div_mail" class="input-field">
                    {{ form_row(form.email) }}
				</div>
				<div class="input-field">
					{{ form_row(form.sujet) }}
				</div>
				<div id="div_message" class="input-field">
					{{ form_label (form.contenu) }}
					{{ form_widget(form.contenu, {'attr': {'class': 'materialize-textarea' }}) }}
					{{ form_errors(form.contenu) }}
				</div>
				<div class="input-field center align">
                    {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
				</div>
                {{ form_end(form) }}
			</div>
		</div>

		<div class="row content_adress">
			<div class="col s4 center-align adress">
				<h4>Notre Adresse</h4>
				<p>02 Brandard</p>
				<p>77620 BRANSLES</p>
				<p>09 64 26 21 06</p>
				<p>06 41 86 09 72</p>
			</div>
				
			<div class="col s7 center-align google-maps">
				<iframe frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=02%20BRANDARD%2077620%20BRANSLES&key=AIzaSyCiwJBRqqJQhPShIT9-ufExL7gT7bzcxmc" allowfullscreen></iframe>
			</div>
		</div>
	</div>
	
	<div class="parallax-container">
		<div class="parallax">
			<img src="{{ asset('bundles/core/img/background/paralaxcontact.jpg') }}" style="min-width: 100vh;min-height: 100%;max-width: 100%;">
		</div>
	</div>
</div>

{% include '@Core/pages/footer.html.twig' %}

{% endblock %}

