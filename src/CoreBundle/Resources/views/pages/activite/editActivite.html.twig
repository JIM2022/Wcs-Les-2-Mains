<div class="modal-content">
    {{ form_start(form) }}

    <div class="input-field">
        {{ form_label (form.activiteType) }}
        {{ form_widget (form.activiteType) }}
        {{ form_errors (form.activiteType) }}
    </div>
    <div class="input-field">
        
        {{ form_widget(form.titre, {'attr': {'placeholder': 'Votre Titre' }}) }}
        {{ form_errors(form.titre) }}
    </div>
    <div class="input-field">
	    {{ form_widget (form.contenu, {'attr': {'class': 'materialize-textarea','placeholder': 'Le Contenu' }}) }}
        {{ form_errors(form.contenu) }}
    </div>
    <div class="input-field">
	    {{ form_widget (form.lien, {'attr': {'class': 'materialize-textarea','placeholder': 'Lien' }}) }}
        {{ form_errors(form.lien) }}
    </div>
    <div class="input-field">
		{{ form_label(form.picture) }}
		{{ form_widget(form.picture) }}
		{{ form_errors(form.picture) }}
    </div>
    <div class="input-field">
        <div class="input-field col s12">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>

    {{ form_end(form) }}
</div>
