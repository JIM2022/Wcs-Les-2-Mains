
{% extends '@Core/layout.html.twig' %}

{% block body %}

 {% if is_granted('ROLE_ADMIN')%}
     {{ form_start(form) }}

    <a class="waves-effect waves-light btn align-center" href="#modal1">Admin</a>
    <div id="modal1" class="modal">
        <div class="modal-content">
            <h4>l'activit√© est ...</h4>
            <div class='row'>
                <div class="input-field col s12">
                    {{ form_label (form.activiteType) }}
                    {{ form_widget (form.activiteType) }}
                    {{ form_errors (form.activiteType) }}
                </div>
            </div>
            <div class="row">
                 <div class="input-field col s6">
                    {{ form_label (form.titre) }}
                    {{ form_widget (form.titre) }}
                    {{ form_errors (form.titre) }}
                 </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            {{ form_label (form.contenu) }}
                            {{ form_widget (form.contenu) }}
                            {{ form_errors (form.contenu) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12">
                   {{ form_widget(form.submit) }}
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endif %}



    {% for activite in activites %}

        <div class="row rubrique">
            <div class="col s12 m12 l12 center">
                <h1>
                    {{ activite.activiteType.nom }}
                </h1>
            </div>
        </div>
        <div class="row titre">
            <div class="col s12 m12 l12 center">
                <h1>
                    {{ activite.titre }}
                </h1>
            </div>
        </div>
        <div class="row contenu">
            <div class="col s6 m6 l6 left-align">
                <p>
                    {{ activite.contenu }}
                </p>
            </div>
        </div>
    {% endfor %}


    <a href="{{ path('core_activite_add') }}">ajout d'une activite</a>
{% endblock %}