
{% extends '@Core/layout.html.twig' %}

{% block body %}



    <div id="activite">

        {#Form Admin #}
        {% if is_granted('ROLE_ADMIN')%}
        {{ form_start(form) }}
<div class="row">

    <a class="offset-s4 offset-m4 col s4 m4  waves-effect teal z-depth-5 darken-4 btn align-center " href="#modal1">Ajouter une activité</a>
</div>
    <div id="modal1" class="modal">
        <div class="modal-content">
            <h4>l'activité est ...</h4>
            <div class='row'>
                <div class="input-field col s12">
                    {{ form_label (form.activiteType) }}
                    {{ form_widget (form.activiteType) }}
                    {{ form_errors (form.activiteType) }}
                </div>
            </div>
            <div class="row">
                 <div class="input-field col s6">
                    {{ form_label (form.titre) }}
                    {{ form_widget (form.titre) }}
                    {{ form_errors (form.titre) }}
                 </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            {{ form_label (form.contenu) }}
                            {{ form_widget (form.contenu) }}
                            {{ form_errors (form.contenu) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s6 m6">
                   {{ form_widget(form.submit, {'label': 'create'}) }}
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endif %}


{#Partie user#}
    <div class="parallax-container">
        <div class="parallax">
            <img src="{{ asset('bundles/core/img/background/pic2.jpg') }}">
        </div>
    </div>

    {% for activite in activites %}
    <div class="container">
        <div class="row rubrique">
            <div class="col s12 m12 l12 center">
                <h1>
                    {{ activite.activiteType.nom }}
                </h1>
            </div>
        </div>
        <div class="row titre">
            <div class="col s12 m12 l12 center">
                <h4>
                    {{ activite.titre }}
                </h4>
            </div>
        </div>
        <div class="row contenu">
            <div class="col s6 m6 l6 left-align">
                <p>
                    {{ activite.contenu }}
                </p>
            </div>
            <div class ="col s6 m6 l6">
                <img src="https://mejorconsalud.com/wp-content/uploads/2014/07/Yoga1-500x333.jpg" height="200" alt="image_yoga"/>
            </div>
        </div>
        <div class="row lien">
            <div class="col s4 m4 l4">
                <a href="https://www.pierrerabhi.org/" class="waves-effect teal z-depth-5 darken-4 btn">à decouvrir</a>
            </div>
            <div class="col s4 m4 l4">
                <a  {# href="{{ path('nos_events.html.twig') }}" #}class="waves-effect teal z-depth-5 darken-4 btn">Nos stages</a>
            </div>
            <div class="col s4 m4 l4">
            <a class="waves-effect teal z-depth-5 darken-4 btn" href="#modal1">En savoir plus</a>
            </div>
        </div>
        {% if is_granted('ROLE_ADMIN')%}
        <div class="row delete">
            <!-- delete-->
            <div class=" col s2 m4">
                <a href="{{ path('core_activite_delete', {'id' :activite.id}) }}" class="waves-effect teal z-depth-5 darken-4 btn">delete</a>
            </div>
        </div>
        {% endif %}

    </div>
    {% endfor %}
    <div class="parallax-container">
        <div class="parallax">
            <img src="https://mejorconsalud.com/wp-content/uploads/2014/07/Yoga1-500x333.jpg" alt="image_yoga">
        </div>
    </div>
    </div>
{% endblock %}