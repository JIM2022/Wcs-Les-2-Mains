{% trans_default_domain 'FOSUserBundle' %}

{% extends 'base.html.twig' %}
    {% block body %}
        <div id="log">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <div class="row">
                <div class="col s10 offset-s1 z-depth-5 row_login">
                    <form action="{{ path("fos_user_security_check") }}" method="post">

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="center-align col s2 logo" style="width: 100%">
                            <img class="z-depth-3" src="{{ asset('bundles/core/img/background/logo_2.png') }}">
                        </div>
                        <div class="col s8 offset-s2 username">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="col s8 offset-s2 password">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required" />
                        </div>
                        <div class="col s8 offset-s2 checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="row">
                            <div class="center-align col s12 submit">
                                <button class="btn waves-effect waves-light" type="submit" name="action" value="{{ 'security.login.submit'|trans }}"> Validation
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}